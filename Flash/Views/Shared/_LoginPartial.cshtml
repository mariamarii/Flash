@using Flash.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity

@inject SignInManager<FlashUser> SignInManager
@inject UserManager<FlashUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
        <li  class="flex-c-m trans-04 p-lr-25">
        <a  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
        <li  class="flex-c-m trans-04 p-lr-25">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
        <li class="flex-c-m trans-04 p-lr-25">
        <a  asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
        <li class="flex-c-m trans-04 p-lr-25">
        <a  asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
