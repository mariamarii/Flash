            </div>
            <label asp-for="@Model.OrderHeader.Name"></label>
            <input asp-for="@Model.OrderHeader.Name"  type="text" class="form-control" id="username" placeholder="Username" required>
            <span asp-validation-for="@Model.OrderHeader.Name"></span>
            <div class="invalid-feedback" style="width: 100%;">
              Your username is required.
            </div>
          </div>
        </div>


        <div class="mb-3">
          <label for="address">Address</label>
          <label asp-for="@Model.OrderHeader.City"></label>
          <input asp-for="@Model.OrderHeader.City" type="text" class="form-control" id="address" placeholder="1234 Main St" required>
          <span asp-validation-for="@Model.OrderHeader.City"></span>
          <div class="invalid-feedback">
            Please enter your shipping address.
          </div>
        </div>

        <div class="mb-3">
          <label for="address2">Address 2 <span class="text-muted">(Optional)</span></label>
          <label asp-for="@Model.OrderHeader.State"></label>
          <input asp-for="@Model.OrderHeader.State"  type="text" class="form-control" id="address2" placeholder="Apartment or suite">
          <span asp-validation-for="@Model.OrderHeader.State"></span>
      </div>
        
        <div class="mb-3">
          <label for="address2">Address 2 <span class="text-muted">(Optional)</span></label>
          <label asp-for="@Model.OrderHeader.StreetAddress"></label>
