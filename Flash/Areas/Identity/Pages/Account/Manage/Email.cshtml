@page
@model EmailModel
@{
	ViewData["Title"] = "Manage Email";
	ViewData["ActivePage"] = ManageNavPages.Email;
}
<body style="background-color:#F8DFD4">
	<partial name="_StatusMessage" for="StatusMessage" />
	<div class="card mb-4 mb-xl-0" style="margin-bottom:50%;">
		<div class="card-header">@ViewData["Title"]</div>
		<div class="card-body text-center">
			<div class="row">
				<div class="col-md-6">
					<form id="email-form" method="post" style="margin-left:50%;">
						<div asp-validation-summary="All" class="text-danger"></div>
						@if (Model.IsEmailConfirmed)
						{
							<div class="form-floating ">
								<label asp-for="Email" class="form-label">Email</label>

								<input asp-for="Email" class="form-control"  disabled />
								@*<div class="input-group-append">
									<span class="h-100 input-group-text text-success font-weight-bold">✓</span>
								</div>*@
							</div>
						}
						else
						{
							<div class="form-floating">
								<label asp-for="Email" class="form-label">Email</label>
								<br></br>
								<input asp-for="Email" class="form-control" disabled />
								<button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
							</div>
						}
						<div class="form-floating">
							<label asp-for="Input.NewEmail" class="form-label">New Email</label>

							<input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" />
							<span asp-validation-for="Input.NewEmail" class="text-danger"></span>
						</div>
						<br></br>
						<button id="update-profile-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-lg btn-primary" style="margin-left:40%">Change email</button>
					</form>
				</div>
			</div>
		</div>
	</div>
	
	<br></br>
	<br></br>
	<br></br>
</body>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

