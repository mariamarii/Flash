@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<body style="background-color:#F8DFD4; padding-bottom:50%;">

<partial name="_StatusMessage" for="StatusMessage" />
    <div class="card mb-4 mb-xl-0" style="margin-bottom:50%;">
<div class="card-header">@ViewData["Title"]</div>
<div class="card-body text-center">
<div class="row">
    <div class="col-md-6" >
            <form id="change-password-form" method="post" style="margin-left:50%; margin-top:5%;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-floating">
                            <label asp-for="Input.OldPassword" class="form-label">Current Password</label>
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
               
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
						<div class="form-floating">
							<label asp-for="Input.NewPassword" class="form-label">New Password</label>
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
						<div class="form-floating">
                            <label asp-for="Input.ConfirmPassword" class="form-label" style="width:300px;">Confirm New Password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
                        <br></br>
                        <button type="submit" id="update-profile-button" class=" btn btn-lg btn-primary" style="margin-left:50%">Update password</button>
        </form>
    </div>
</div>
</div>
</div>
    <br></br>
    <br></br>
    <br></br>


</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

